<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_explora">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="292dp"
        android:layout_height="33dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="#0000FF"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="682dp" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="18dp"
        android:fontFamily="@font/sf_pro_text_medium"
        android:hint="Full-name"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="#3C3C43"
        android:textColorHint="#DD4A4A50"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="317dp" />

    <EditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="18dp"
        android:fontFamily="@font/sf_pro_text_medium"
        android:hint="Valid E-mail"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="#3C3C43"
        android:textColorHint="#DD4A4A50"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="392dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="18dp"
        android:fontFamily="@font/sf_pro_text_medium"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#3C3C43"
        android:textColorHint="#DD4A4A50"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="520dp" />


    <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="18dp"
        android:fontFamily="@font/sf_pro_text_medium"
        android:hint="Phone Number"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#3C3C43"
        android:textColorHint="#DD4A4A50"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="453dp" />

    <CheckBox
        android:layout_width="334dp"
        android:layout_height="63dp"
        android:checked="true"
        android:text="By checking the box you agree to our Terms and Conditions"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="597dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/undraw"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="288dp"
        android:src="@drawable/freeaccoun"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="256dp"
        android:src="@drawable/started"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>